<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.DetailEmployee">
	<App id="app">
		<pages>
			<Page title="{i18n>detailTitle}" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{i18n>detailContainerTitle}: {detailModel>/UID}" id="container1">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderMid}">
										<sap.ui.layout.form:fields>
											<Text width="50%" text="{detailModel>/MID}" textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderEmployee}">
										<sap.ui.layout.form:fields>
											<Text width="50%" text="{detailUserModel>/NAME}, {detailUserModel>/VORNAME}" textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderDate}">
										<sap.ui.layout.form:fields>
											<Text width="50%"
												text="{ path: 'detailModel>/DATUM', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'dd.MM.yyyy' } } }"
												textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderType}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Center" text="{path: 'detailModel>/ART', formatter: '.formatter.antragArtText'}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderCategory}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Center" text="{detailModel>/KATEGORIE}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderValue}">
										<sap.ui.layout.form:fields>
											<!--	<ObjectNumber
												number="{ parts:[{path:'detailModel>/BETRAG'},{path:'i18n>currency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
												unit="{i18n>currency}"/>-->
											<Text xmlns="sap.m" width="50%" text="{parts: [{path: 'detailModel>/BETRAG'}, {path: 'i18n>currency'}], type: 'sap.ui.model.type.Currency'}"
												textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderStatus}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Center" text="{path: 'detailModel>/STATUS', formatter: '.formatter.statusText'}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderDescription}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Center" text="{detailModel>/BESCHREIBUNG}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderFeedback}" visible="{= ${detailModel>/FEEDBACK} !== null}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Center" text="{detailModel>/FEEDBACK}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderAttachment}" visible="{= ${detailModel>/ATTACHMENTS} !== undefined}">
										<sap.ui.layout.form:fields>
											<UploadCollection id="UploadCollection" multiple="false" change="onChange" selectionChange="onSelectionChange" uploadButtonInvisible="true"
												uploadEnabled="false" items="{ path: 'detailModel>/ATTACHMENTS/'}">
												<items>
													<UploadCollectionItem documentId="TODO" fileName="{detailModel>FILENAME}" mimeType="text/plain" enableEdit="false" enableDelete="false"
														visibleDelete="false" visibleEdit="false" selected="false"/>
												</items>
											</UploadCollection>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>