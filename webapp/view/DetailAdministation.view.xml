<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.DetailAdministation">
	<App>
		<pages>
			<Page title="DetailAdministation" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{i18n>detailContainerTitle}: {detailADModel>/UID}" id="container1">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderMid}">
										<sap.ui.layout.form:fields>
											<Text width="50%" text="{detailADModel>/MID}" textAlign="Left"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderEmployee}">
										<sap.ui.layout.form:fields>
											<Text width="50%" text="{detailADUserModel>/NAME}, {detailADUserModel>/VORNAME}" textAlign="Left"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderDate}">
										<sap.ui.layout.form:fields>
											<Text width="50%" text="{ path: 'detailADModel>/DATUM', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'dd.MM.yyyy' } } }" textAlign="Left"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderType}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Left" text="{path: 'detailADModel>/ART', formatter: '.formatter.antragArtText'}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderCategory}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Left" text="{detailADModel>/BEZEICHNUNG}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderValue}">
										<sap.ui.layout.form:fields>
											<HBox width="100%" id="hbox0">
												<items>
													<Text xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns="sap.m" width="100%" text="{parts: [{path: 'detailADModel>/BETRAG'}, {path: 'i18n>currency'}], type: 'sap.ui.model.type.Currency'}" textAlign="Left" id="text9" class="sapUiSmallMarginEnd"/>
													<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:sap.ui.layout.form="sap.ui.layout.form" xmlns="sap.m" width="10%" icon="sap-icon://edit" tooltip="{i18n>TooltipValueEditButton}" id="button0"/>
												</items>
											</HBox>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderAccountBalance}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Left" text="{parts: [{path: 'detailADUserModel>/GUTHABEN'}, {path: 'i18n>currency'}], type: 'sap.ui.model.type.Currency'}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderStatus}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Left" text="{path: 'detailADModel>/STATUS', formatter: '.formatter.statusText'}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderDescription}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" textAlign="Left" text="{detailADModel>/BESCHREIBUNG}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>HeaderFeedback}">
										<sap.ui.layout.form:fields>
											<TextArea xmlns="sap.m" value="{detailADModel>/FEEDBACK}" rows="4" id="areaFeedback" width="50%" required="true"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
				<footer>
					<OverflowToolbar class="sapContrast sapContrastPlus" width="100%" id="toolbar1">
						<content>
							<ToolbarSpacer id="spacer0"/>
							<Button xmlns="sap.m" id="submitButton" type="Accept" text="Genehmigen" press="approveRequestPressed"/>
							<Button xmlns="sap.m" id="cancelButton" type="Reject" text="Ablehnen" press="rejectRequestPressed"/>
						</content>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>