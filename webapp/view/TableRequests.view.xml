<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.TableRequests">
	<App id="app">
		<pages>
			<Page title="" floatingFooter="true">
				<content>
					<Table id="requestTableId" growing="true" items="{ path : 'requestTableModel>/'}" growingScrollToLoad="true">
						<columns>
							<Column id="columnU">
								<header>
									<Label text="Vorgangsnummer" id="labelU"/>
								</header>
							</Column>
							<Column id="column0">
								<header>
									<Label text="{i18n>HeaderEmployee}" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="{i18n>HeaderDate}" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="{i18n>HeaderValue}" id="label3"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="{i18n>HeaderType}" id="label2"/>
								</header>
							</Column>
							<Column id="column5">
								<header>
									<Label text="{i18n>HeaderStatus}" id="label4"/>
								</header>
							</Column>
							<Column width="5%" id="column6">
								<header/>
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onNavToDetail" type="Active">
								<cells>
									<Label text="{requestTableModel>UID}"/>
									<Label text="{requestTableModel>VORNAME} {requestTableModel>NAME}"/>
									<Label
										text="{ path: 'requestTableModel>DATUM', type: 'sap.ui.model.type.Date', formatOptions: { source: { pattern: 'yyyy-MM-ddTHH:mm:ss.SSSZ' }, pattern: 'dd.MM.yyyy' } }"/>
									<ObjectNumber
										number="{ parts:[{path:'requestTableModel>BETRAG'},{path:'i18n>currency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
										unit="{i18n>currency}" state="{= ${requestTableModel>BETRAG} >= 0 ? 'Success' : 'Error' }"/>
									<Label text="{path: 'requestTableModel>ART', formatter: '.formatter.antragArtText'}"/>
									<ObjectStatus text="{path: 'requestTableModel>STATUS', formatter: '.formatter.statusText'}"
										state="{path: 'requestTableModel>STATUS', formatter: '.formatter.statusIndicator'}"/>
									<CheckBox id="checkBox0" selected="false" visible="{= ${requestTableModel>STATUS} === 2 &amp;&amp; ${requestTableModel>ART} === 0}"/>
								</cells>
							</ColumnListItem>
						</items>
						<headerToolbar>
							<Toolbar width="100%" id="toolbar4">
								<content>
									<SearchField placeholder="Betrag oder Name..." id="searchField0" width="40%" search="filterTable"/>
									<DateRangeSelection xmlns="sap.m" id="rangepicker0" width="40%" change="filterTable" placeholder="Zeitfenster wählen..."/>
									<Label text="Status:" width="100%" id="label6" textAlign="End"/>
									<ActionSelect id="select0" change="filterTable" forceSelection="false" selectedKey="1">
										<items>
											<core:ListItem text="Abgelehnt" id="item0" key="0"/>
											<core:ListItem text="Ausstehend" id="item1" key="1"/>
											<core:ListItem text="Genehmigt" id="item2" key="2"/>
											<core:ListItem text="Durchgeführt" id="item3" key="3"/>
											<core:ListItem text="-" id="item4" key="4"/>
										</items>
									</ActionSelect>
								</content>
							</Toolbar>
						</headerToolbar>
					</Table>
				</content>
				<customHeader>
					<Bar id="bar0">
						<contentLeft>
							<HBox>
								<Button width="100%" id="backButton" icon="sap-icon://nav-back" press="onNavBack" tooltip="{i18n>navBackTip}"/>
								<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" width="100%"
									id="startpageButton" icon="sap-icon://home" press="onNavStartpage" tooltip="{i18n>navStartpageTip}"/>
							</HBox>
						</contentLeft>
						<contentMiddle>
							<Label text="{i18n>requestTableTitle}" width="100%" id="nameLabel_copy"/>
						</contentMiddle>
						<contentRight>
							<Label text="Freigabewert:" textAlign="Right"/>
							<ObjectNumber
								number="{ parts:[{path:'dbUserModel>/VERWALTER'},{path:'i18n&gt;currency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
								unit="{i18n>currency}"/>
						</contentRight>
					</Bar>
				</customHeader>
				<footer>
					<!-- Erstmal versteckt, weil hier kein Feedback gegeben werden kann -->
					<OverflowToolbar class="sapContrast sapContrastPlus" width="100%" id="toolbar1">
						<content>
							<ToolbarSpacer id="spacer0"/>
							<Button xmlns="sap.m" id="submitButton" type="Accept" text="Genehmigen" visible="false"/>
							<Button xmlns="sap.m" id="cancelButton" type="Reject" text="Ablehnen" visible="false"/>
							<Button xmlns="sap.m" press="onMarkAsTransacted" id="transactedButton" type="Accept" text="{i18n>markAsTransacted}"/>
						</content>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>