<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Detailansicht">
	<App>
		<pages>
			<Page title="{i18n>detailTitle}" showNavButton="true" navButtonPress="onNavBack">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{i18n>detailContainerTitle}: {detailModel>/UID}" id="container1">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelMid}">
										<sap.ui.layout.form:fields>
											<Text width="50%" id="mitarbeiterId" text="{detailModel>/MID}" textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelEmployee}">
										<sap.ui.layout.form:fields>
											<Text width="50%" id="mitarbeiternameId" text="{dbUserModel>/NAME}, {dbUserModel>/VORNAME}" textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelDate}">
										<sap.ui.layout.form:fields>
											<Text width="50%" id="datumId"
												text="{ path: 'detailModel>/DATUM', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'dd.MM.yyyy' } } }"
												textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelType}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" id="artId" textAlign="Center" text="{detailModel>/ART}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelCategory}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" id="kategorieId" textAlign="Center" text="{detailModel>/KATEGORIE}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelValue}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" id="betragId"
												text="{parts: [{path: 'detailModel>/BETRAG'}, {path: 'i18n>currency'}], type: 'sap.ui.model.typeCurrency'}" textAlign="Center"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelStatus}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" id="statusId" textAlign="Center" text="{detailModel>/STATUS}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>detailLabelDescription}">
										<sap.ui.layout.form:fields>
											<Text xmlns="sap.m" width="50%" id="beschreibungId" textAlign="Center" text="{detailModel>/BESCHREIBUNG}"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>