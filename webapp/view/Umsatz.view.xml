<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Umsatz">
	<App>
		<pages>
			<Page title="Umsatzanzeige" floatingFooter="true">
				<content>
					<Table id="table0" growing="true" items="{ path : 'umsatzModel>/'}">
						<columns>
							<Column id="column0">
								<header>
									<Label text="{i18n>umsatzTableHeaderType}" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="{i18n>umsatzTableHeaderDate}" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="{i18n>umsatzTableHeaderValue}" id="label2"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="{i18n>umsatzTableHeaderCategory}" id="label3"/>
								</header>
							</Column>
							<Column id="column4">
								<header>
									<Label text="{i18n>umsatzTableHeaderStatus}" id="label4"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem id="item0" press="detailFunc" type="Active">
								<cells>
									<Label text="{umsatzModel>ART}" id="label5"/>
									<Label text="{umsatzModel>DATUM}" id="label6"/>
									<Label text="{umsatzModel>BETRAG}" id="label7"/>
									<Label text="{umsatzModel>KATEGORIE}" id="label8"/>
									<Label text="{umsatzModel>STATUS}" id="label9"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<customHeader>
					<Bar id="bar0">
						<contentLeft>
							<Button width="100%" id="backButton" icon="sap-icon://nav-back" press="onNavBack"/>
						</contentLeft>
						<contentMiddle>
							<Label text="{dbUserModel>/VORNAME} {dbUserModel>/NAME}" width="100%" id="nameLabel"/>
						</contentMiddle>
						<contentRight>
							<Label text="{dbUserModel>/GUTHABEN} EUR" width="100%" id="guthabenLabel"/>
						</contentRight>
					</Bar>
				</customHeader>
			</Page>
		</pages>
	</App>
</mvc:View>