<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Umsatz">
	<App>
	    <pages>
			<Page title="Umsatzanzeige" showNavButton="true" floatingFooter="true" navButtonPress="onNavToStartpage">
				<content>
				    <Table id="table0" growing="true" items="{ path  : 'UmsatzModel>/'}">
				        <columns>
				            <Column id="column0">
				                <header>
				                    <Label text="Art" id="label0"/>
				                </header>
				            </Column>
				            <Column id="column1">
				                <header>
				                    <Label text="Datum" id="label1"/>
				                </header>
				            </Column>
				            <Column id="column2">
				                <header>
				                    <Label text="Betrag" id="label2"/>
				                </header>
				            </Column>
				            <Column id="column3">
				            <header>
				                <Label text="Kategorie" width="100%" id="label3"/>
				            </header>
				            </Column>
				            <Column id="column4">
				            <header>
				                <Label text="Status" width="100%" id="label4"/>
				            </header>
				            </Column></columns>

				        <items>
				        	
				            <ColumnListItem id="item0" press="detailFunc" type="Active">
				                <cells>
				                    <Label text="{UmsatzModel>ART}" id="label5"/>
				                    <Label text="{UmsatzModel>DATUM}" id="label6"/>
				                    <Label text="{UmsatzModel>BETRAG}" id="label7"/>
				                    <Label text="{UmsatzModel>KATEGORIE}" id="label8"/>
				                    <Label text="{UmsatzModel>STATUS}" id="label9"/>
				                </cells>    
				            </ColumnListItem> 
			            
				        </items>
				  </Table>
				</content>
			<customHeader>
			    <Bar id="bar0">
			        <contentLeft>
			            <Label text="Vorname Nachname" width="100%" id="nameLabel"/>
			        </contentLeft>
			    <contentRight>
			        <Label text="0.00 EUR" width="100%" id="guthabenLabel"/>
			    </contentRight>
			    </Bar>
			</customHeader>
			</Page>
		</pages>
	</App>
</mvc:View>