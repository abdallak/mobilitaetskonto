<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Settings" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavButtonPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer width="20px"/>
				<Button id="backButton" icon="sap-icon://nav-back" press="onNavBack" type="Transparent">
					<layoutData>
						<FlexItemData growFactor="1"/>
					</layoutData>
				</Button>
				<ToolbarSpacer width="20px"/>
				<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" width="100%"
					id="startpageButton" icon="sap-icon://home" press="onNavStartpage" tooltip="{i18n>navStartpageTip}"/>
				<ToolbarSpacer width="20px"/>
				<Text text="{i18n>startpageSettingsTile}" wrapping="false"/>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id="sideNavigation" selectedKey="manageEmployeeStatus" itemSelect=".onItemSelect">
				<tnt:NavigationList>
					<tnt:NavigationListItem text="Mitarbeiter verwalten" icon="sap-icon://user-edit">
						<tnt:NavigationListItem text="Mitarbeiterstatus anpassen" key="manageEmployeeStatus"/>
						<tnt:NavigationListItem text="Verwalterguthaben anpassen" key="manageVerwalterguthaben"/>
						<tnt:NavigationListItem text="Verwalter zuordnen" key="assignAdministrators"/>
					</tnt:NavigationListItem>
					<tnt:NavigationListItem text="Kategorien verwalten" icon="sap-icon://shelf" key="manageCategories"/>
					<tnt:NavigationListItem text="Log einsehen" icon="sap-icon://customer-history" key="showLog"/>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="Datenschutz" icon="sap-icon://private" key="privacy"/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="navContainer" initialPage="manageEmployeeStatus">
				<pages>
					<Page id="manageEmployeeStatus" showHeader="false">
						<mvc:XMLView viewName="Mobilitaetskonto.Mobilitaetskonto.view.SettingsEmployeeStatus"/>
					</Page>
					<Page id="manageVerwalterguthaben" title="Verwalterguthaben anpassen">
						<Text text="TODO Verwalterguthaben anpassen"/>
					</Page>
					<Page id="assignAdministrators" title="Verwalter zuordnen">
						<Text text="TODO Verwalter zuordnen"/>
					</Page>
					<Page id="manageCategories" showHeader="false">
						<mvc:XMLView viewName="Mobilitaetskonto.Mobilitaetskonto.view.SettingsCategory"/>
					</Page>
					<Page id="showLog" showHeader="false">
						<mvc:XMLView viewName="Mobilitaetskonto.Mobilitaetskonto.view.SettingsLog"/>
					</Page>
					<Page id="privacy" title="Datenschutz">
						<Text text="Datenschutz"/>
					</Page>
				</pages>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>