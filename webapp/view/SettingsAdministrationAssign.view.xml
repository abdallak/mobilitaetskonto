<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.SettingsAdministrationAssign" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>settingsAdministrationAssignTitle}">
				<content>
					<Table id="requestTableId" growing="true" items="{ path : 'employeeTableModel>/', sorter : { path : 'FREIGABEWERT' }}"
						growingScrollToLoad="true">
						<columns>
							<Column id="column0">
								<header>
									<Label text="Name" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="Aktiv" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="Freigeber" id="label2"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="Freigabewert" id="label3"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem detailPress="onEditPressed" type="Detail">
								<cells>
									<ObjectIdentifier title="{path: 'employeeTableModel>VORNAME'} {path: 'employeeTableModel>NAME'}" text="{path: 'employeeTableModel>MID'}"
										id="objectidentifier0"/>
									<Label text="{employeeTableModel>AKTIV}"/>
									<Label text="{path: 'employeeTableModel>FREIGEBER'}"/>
									<ObjectNumber
										number="{ parts:[{path:'employeeTableModel>FREIGABEWERT'},{path:'i18n&gt;currency'}], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"
										unit="{i18n>currency}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>