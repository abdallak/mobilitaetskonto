<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:l="sap.ui.layout" controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Request" busyIndicatorSize="Auto">
	<App id="app">
		<pages>
			<Page floatingFooter="true">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{dbUserModel>/VORNAME} {dbUserModel&gt;/NAME}" id="container1">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Art" id="element1_1574960390335">
										<sap.ui.layout.form:fields>
											<SegmentedButton xmlns="sap.m" selectedKey="{oRequestModel>/art}" id="art">
												<items>
													<SegmentedButtonItem text="{i18n>requestPayout}" key="0" id="payout"/>
													<SegmentedButtonItem text="{i18n>requestCredit}" key="1" id="credit"/>
												</items>
											</SegmentedButton>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="Kategorie" id="element1">
										<sap.ui.layout.form:fields>
											<Select xmlns="sap.m" id="categorySelect" busyIndicatorSize="Auto" maxWidth="30%" change="KategorieSelect"
												selectedKey="{oRequestModel>/kid}">
												<items/>
											</Select>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>requestAmount}" id="element0">
										<sap.ui.layout.form:fields>
											<HBox width="100%" id="hbox0">
												<Input width="100%" id="amount" placeholder="{i18n>requestPlaceholder}" required="true" type="Number" value="{oRequestModel>/betrag}"
													liveChange="onValueChanged"/>
												<core:Icon src="sap-icon://message-information" size="1.9em" id="icon0" tooltip="{i18n>requestInfoIcon}" class="sapUiSmallMarginBegin"/>
											</HBox>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>requestDescription}" id="element3">
										<sap.ui.layout.form:fields>
											<TextArea xmlns="sap.m" id="description" rows="6" value="{oRequestModel>/beschreibung}" wrapping="Soft" busyIndicatorSize="Auto"
												required="true"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
								<sap.ui.layout.form:FormElement label="AnhÃ¤nge">
									<sap.ui.layout.form:fields>
										<UploadCollection id="UploadCollection" maximumFilenameLength="55" maximumFileSize="10" multiple="true" sameFilenameAllowed="false"
											noDataDescription="Dateien hierherziehen oder den &quot;+&quot; Knopf zum Upload nutzen" change="onChange"
											filenameLengthExceed="onFilenameLengthExceed" fileSizeExceed="onFileSizeExceed" instantUpload="false"/>
									</sap.ui.layout.form:fields>
								</sap.ui.layout.form:FormElement>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
				<customHeader>
					<Bar id="bar0">
						<contentLeft>
							<HBox>
								<Button width="100%" id="backButton" icon="sap-icon://nav-back" press="onNavBack" tooltip="{i18n>navBackTip}"/>
								<Button xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m" width="100%"
									id="startpageButton" icon="sap-icon://home" press="onNavStartpage" tooltip="{i18n>navStartpageTip}"/>
							</HBox>
						</contentLeft>
						<contentMiddle>
							<Label xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m"
								text="{i18n>requestTitle}" width="100%" id="titleLabel"/>
						</contentMiddle>
						<contentRight></contentRight>
					</Bar>
				</customHeader>
				<footer>
					<OverflowToolbar class="sapContrast sapContrastPlus" width="100%" id="toolbar1">
						<content>
							<ToolbarSpacer id="spacer0"/>
							<Button xmlns="sap.m" id="cancelButton" type="Reject" text="{i18n>cancelButton}" press="cancelButton"/>
							<Button xmlns="sap.m" id="submitButton" type="Accept" press="submitRequest" text="{i18n>requestSubmitButton}"/>
						</content>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>