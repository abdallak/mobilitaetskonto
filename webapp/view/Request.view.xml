<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Request" busyIndicatorSize="Auto">
	<App id="app">
		<pages>
			<Page title="{i18n>requestTitle}" showNavButton="true" floatingFooter="true" navButtonPress="onNavBack">
				<content>
					<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
						<sap.ui.layout.form:formContainers>
							<sap.ui.layout.form:FormContainer title="{dbUserModel>/VORNAME} {dbUserModel&gt;/NAME}" id="container1">
								<sap.ui.layout.form:formElements>
									<sap.ui.layout.form:FormElement label="Art" id="element1_1574960390335">
										<sap.ui.layout.form:fields>
											<SegmentedButton xmlns="sap.m" selectedKey="{oRequestModel>/art}" id="art">
												<items>
													<SegmentedButtonItem text="{i18n>requestPayout}" key="0" id="item2"/>
													<SegmentedButtonItem text="{i18n>requestCredit}" key="1" id="item3"/>
												</items>
											</SegmentedButton>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="Kategorie" id="element1">
										<sap.ui.layout.form:fields>
											<Select xmlns="sap.m" id="select0" busyIndicatorSize="Auto" maxWidth="30%" change="KategorieSelect" selectedKey="{oRequestModel>/kid}">
												<items>
													<core:Item xmlns:core="sap.ui.core" key="0" text="Bahncard" id="Bahncard"/>
													<core:Item xmlns:core="sap.ui.core" key="1" text="Mietwagen" id="Mietwagen"/>
													<core:Item xmlns:core="sap.ui.core" key="2" text="Bike-Sharing Fahrradleasing" id="Fahrradleasing"/>
													<core:Item xmlns:core="sap.ui.core" key="3" text="Ã–PNV" id="OePNV"/>
													<core:Item xmlns:core="sap.ui.core" key="4" text="Car Sharing" id="CarSharing"/>
													<core:Item xmlns:core="sap.ui.core" key="5" text="Firmenwagen" id="Firmenwagen"/>
													<core:Item xmlns:core="sap.ui.core" key="6" text="Sonstiges" id="Sonstiges"/>
												</items>
											</Select>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>requestAmount}" id="element0">
										<sap.ui.layout.form:fields>
											<Input width="100%" id="amount" placeholder="{i18n>requestPlaceholder}" required="true" type="Number" value="{oRequestModel>/betrag}"
												liveChange="onValueChanged"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
									<sap.ui.layout.form:FormElement label="{i18n>requestDescription}" id="element3">
										<sap.ui.layout.form:fields>
											<TextArea xmlns="sap.m" id="description" rows="6" value="{oRequestModel>/beschreibung}" wrapping="Soft" busyIndicatorSize="Auto"
												required="true"/>
										</sap.ui.layout.form:fields>
									</sap.ui.layout.form:FormElement>
								</sap.ui.layout.form:formElements>
							</sap.ui.layout.form:FormContainer>
						</sap.ui.layout.form:formContainers>
						<sap.ui.layout.form:layout>
							<sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
						</sap.ui.layout.form:layout>
					</sap.ui.layout.form:Form>
				</content>
				<footer>
					<OverflowToolbar class="sapContrast sapContrastPlus" width="100%" id="toolbar1">
						<content>
							<ToolbarSpacer id="spacer0"/>
							<Button xmlns="sap.m" id="cancelButton" type="Reject" text="{i18n>cancelButton}" press="cancelButton"/>
							<Button xmlns="sap.m" id="submitButton" type="Accept" press="submitRequest" text="{i18n>requestSubmitButton}"/>
						</content>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>