<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.Startpage"
	displayBlock="true">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n&gt;title}">
					<content>
						<sap.ui.layout:HorizontalLayout xmlns:sap.ui.layout="sap.ui.layout" id="layout0">
							<sap.ui.layout:content>
								<GenericTile xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="antragStellenTile"
									class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="{i18n&gt;startpageRequestTile}"
									subheader="{i18n&gt;startpageRequestTileSub}" press="onNavToRequest" visible="{= ${roleModel>/mitarbeiter} === true}" />
								<GenericTile xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" class="sapUiTinyMarginBegin sapUiTinyMarginTop"
									header="{i18n&gt;startpageSalesTile}" subheader="{i18n&gt;startpageSalesTileSub}" id="tile1" press="onNavToSales" visible="{= ${roleModel>/mitarbeiter} === true}" >
									<tileContent>
										<TileContent>
											<content>
												<NumericContent
													value="{parts: [{path:'dbUserModel>/GUTHABEN'}, {path:'i18n>currency'}], type: 'sap.ui.model.type.Currency',formatOptions: {showMeasure:true}}"
													truncateValueTo="12" id="NumCont1" valueColor="{= ${dbUserModel>/GUTHABEN} >= 0 ? 'Good' : 'Critical' }"/>
											</content>
										</TileContent>
									</tileContent>
								</GenericTile>
							</sap.ui.layout:content>
						</sap.ui.layout:HorizontalLayout>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>