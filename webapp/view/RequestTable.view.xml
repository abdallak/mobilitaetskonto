<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.RequestTable">
	<App id="app">
		<pages>
			<Page title="{i18n>requestTableTitle}" floatingFooter="true">
				<content>
					<Table id="table0" growing="true" items="{ path : 'requestTableModel>/'}" updateFinished="updateFinished" growingScrollToLoad="true">
						<columns>
							<Column id="column0">
								<header>
									<Label text="{i18n>HeaderType}" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="{i18n>HeaderDate}" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="{i18n>HeaderEmployee}" id="label2"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="{i18n>HeaderValue}" id="label3"/>
								</header>
							</Column>
							<Column id="column4">
								<header>
									<Label text="{i18n>HeaderStatus}" id="label4"/>
								</header>
							</Column>
							<Column id="column5">
								<header>
									<Text text="{i18n>HeaderCategorie}"/>
								</header>
							</Column>
							<Column width="5%" id="column6">
								<header/>
							</Column>
						</columns>
						<items>
							<ColumnListItem press="onNavToDetail" type="Active">
								<cells>
									<Label text="{path: 'requestTableModel>ART', formatter: '.formatter.antragArtText'}"/>
									<Label
										text="{path: 'requestTableModel>DATUM', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'dd.MM.yyyy' } } }"/>
									<Label text="{requestTableModel>NAME}, {requestTableModel>VORNAME}"/>
									<Label text="{parts: [{path: 'requestTableModel>BETRAG'}, {path: 'i18n>currency'}], type: 'sap.ui.model.type.Currency'}"/>
									<Label text="{path: 'requestTableModel>STATUS', formatter: '.formatter.statusText'}"/>
									<Label text="{requestTableModel>BEZEICHNUNG}"/>
									<CheckBox selected="false"/>
								</cells>
							</ColumnListItem>
						</items>
						<headerToolbar>
							<Toolbar width="100%" id="toolbar4">
								<content>
									<SearchField placeholder="Search for ..." id="field2" width="30%" search="handleSearch"/>
									<Label text="Status:" width="100%" id="label6" textAlign="End"/>
									<ActionSelect id="select0" change="selectionChanged" forceSelection="false" selectedKey="1">
										<items>
											<core:ListItem text="Abgelehnt" id="item0" key="0.1"/>
											<core:ListItem text="Ausstehend" id="item1" key="1"/>
											<core:ListItem text="Genehmigt" id="item2" key="2"/>
											<core:ListItem text="Durchgeführt" id="item3" key="3"/>
											<core:ListItem text="-" id="item4" key="4"/>
										</items>
									</ActionSelect>
								</content>
							</Toolbar>
						</headerToolbar>
					</Table>
				</content>
				<customHeader>
					<Bar id="bar0">
						<contentLeft>
							<Button width="100%" id="backButton" icon="sap-icon://nav-back" press="onNavBack"/>
						</contentLeft>
						<contentMiddle>
							<Label text="Ausstehende Anträge" width="100%" id="nameLabel_copy"/>
						</contentMiddle>
					</Bar>
				</customHeader>
				<footer>
					<!-- Erstmal versteckt, weil hier kein Feedback gegeben werden kann -->
					<OverflowToolbar class="sapContrast sapContrastPlus" width="100%" id="toolbar1" visible="false">
						<content>
							<ToolbarSpacer id="spacer0"/>
							<Button xmlns="sap.m" id="submitButton" type="Accept" text="Genehmigen"/>
							<Button xmlns="sap.m" id="cancelButton" type="Reject" text="Ablehnen"/>
						</content>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>