<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="Mobilitaetskonto.Mobilitaetskonto.controller.TableSales">
	<App id="app">
		<pages>
			<Page title="{i18n>salesTitle}" floatingFooter="true">
				<content>
					<Table id="table0" growing="true" items="{ path : 'salesModel>/'}">
						<columns>
							<Column id="column0">
								<header>
									<Label text="{i18n>HeaderType}" id="label0"/>
								</header>
							</Column>
							<Column id="column1">
								<header>
									<Label text="{i18n>HeaderDate}" id="label1"/>
								</header>
							</Column>
							<Column id="column2">
								<header>
									<Label text="{i18n>HeaderValue}" id="label2"/>
								</header>
							</Column>
							<Column id="column3">
								<header>
									<Label text="{i18n>HeaderCategory}" id="label3"/>
								</header>
							</Column>
							<Column id="column4">
								<header>
									<Label text="{i18n>HeaderStatus}" id="label4"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem id="item0" press="onNavToDetail" type="Active">
								<cells>
									<Label text="{path: 'salesModel>ART', formatter: '.formatter.antragArtText'}" id="label5"/>
									<Label
										text="{path: 'salesModel>DATUM', type: 'sap.ui.model.type.Date', formatOptions: { style: 'long', source: { pattern: 'dd.MM.yyyy' } } }"
										id="label6"/>
									<Label text="{parts: [{path: 'salesModel>BETRAG'}, {path: 'i18n>currency'}], type: 'sap.ui.model.type.Currency'}" id="label7"/>
									<Label text="{salesModel>KATEGORIE}" id="label8"/>
									<Label text="{path: 'salesModel>STATUS', formatter: '.formatter.statusText'}" id="label9"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
				<customHeader>
					<Bar id="bar0">
						<contentLeft>
							<Button width="100%" id="backButton" icon="sap-icon://nav-back" press="onNavBack"/>
						</contentLeft>
						<contentMiddle>
							<Label xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns="sap.m"
								text="{dbUserModel>/VORNAME} {dbUserModel>/NAME}" width="100%" id="nameLabel_copy"/>
						</contentMiddle>
						<contentRight>
							<Label text="{parts: [{path:'dbUserModel>/GUTHABEN'}, {path:'i18n>currency'}], type: 'sap.ui.model.type.Currency'}"/>
						</contentRight>
					</Bar>
				</customHeader>
			</Page>
		</pages>
	</App>
</mvc:View>